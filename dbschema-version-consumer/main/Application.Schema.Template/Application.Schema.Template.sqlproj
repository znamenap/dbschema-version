<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" Sdk="Microsoft.Build.Sql">
  <PropertyGroup>
    <Name>Application.Schema.Template</Name>
    <ProjectGuid>{49265350-0275-4074-8b02-717b91132c30}</ProjectGuid>
    <DSPVersion Condition=" '$(DSPVersion)' == '' ">120</DSPVersion>
    <DSP>Microsoft.Data.Tools.Schema.Sql.Sql$(DSPVersion)DatabaseSchemaProvider</DSP>
    <RootNamespace>Application.Schema.Template</RootNamespace>
    <AssemblyName>Application.Schema.Template</AssemblyName>
    <ModelCollation>1033, CI</ModelCollation>
    <DefaultFileStructure>BySchemaAndSchemaType</DefaultFileStructure>
    <DeployToDatabase>True</DeployToDatabase>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <SqlServerVerification>False</SqlServerVerification>
    <IncludeCompositeObjects>True</IncludeCompositeObjects>
    <TargetDatabaseSet>True</TargetDatabaseSet>
    <DefaultSchema>template</DefaultSchema>
    <DeployStaticDataEnabled>True</DeployStaticDataEnabled>
    <DeploySchemaVersionEnabled>True</DeploySchemaVersionEnabled>
    <BuildScriptName>$(MSBuildProjectName).sql</BuildScriptName>
    <TreatTSqlWarningsAsErrors>True</TreatTSqlWarningsAsErrors>
    <AdditionalDeploymentContributorPaths>..\..\..\output\contributors\main\bin\$(Configuration)\netstandard2.0\</AdditionalDeploymentContributorPaths>
  </PropertyGroup>
  <Import Project="..\..\..\output\contributors\main\bin\$(Configuration)\netstandard2.0\DbSchema.Version.Contributors.targets" Condition="Exists('..\..\..\output\contributors\main\bin\$(Configuration)\netstandard2.0\DbSchema.Version.Contributors.targets')" />
  <ItemGroup>
    <None Include="Invoke-DacPacDeploy.ps1">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="Application.Schema.Template.publish.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <!-- 
  TODO: Microsoft.Build.Sql does not support deployment extension configuration.
  -->
  <ItemGroup>
    <DeploymentExtensionConfiguration Include="Feature\_Template\Data\template.data.sql" />
    <DeploymentExtensionConfiguration Include="Feature\Group\Data\system_groups.data.sql" />
    <DeploymentExtensionConfiguration Include="Feature\User\Data\system_users.data.sql" />
  </ItemGroup>
  <ItemGroup>
    <Build Remove="@(DeploymentExtensionConfiguration)" />
  </ItemGroup>
  <ItemGroup>
    <PostDeploy Include="Script.PostDeployment.sql" />
  </ItemGroup>
  <ItemGroup>
    <PreDeploy Include="Script.PreDeployment.sql" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.SqlServer.Dacpacs.Master" Version="$(DSPVersion).0.0">
      <DacPacName>master</DacPacName>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <ArtifactReference Include="..\..\..\output\schema\main\$(DspVersion)\bin\$(Configuration)\DbSchema.Version.dacpac">
      <HintPath>..\..\..\output\schema\main\$(DspVersion)\bin\$(Configuration)\DbSchema.Version.dacpac</HintPath>
      <SuppressMissingDependenciesErrors>False</SuppressMissingDependenciesErrors>
    </ArtifactReference>
  </ItemGroup>
  <ItemGroup>
    <SqlCmdVariable Include="ApplicationName">
      <DefaultValue>Application.Schema.Template</DefaultValue>
      <Value>$(SqlCmdVar__1)</Value>
    </SqlCmdVariable>
    <SqlCmdVariable Include="ApplicationSchemaName">
      <DefaultValue>template</DefaultValue>
      <Value>$(SqlCmdVar__2)</Value>
    </SqlCmdVariable>
    <SqlCmdVariable Include="ApplicationUpgradeVersion">
      <DefaultValue>NULL</DefaultValue>
      <Value>$(SqlCmdVar__3)</Value>
    </SqlCmdVariable>
    <SqlCmdVariable Include="ApplicationDowngradeVersion">
      <DefaultValue>NULL</DefaultValue>
      <Value>$(SqlCmdVar__4)</Value>
    </SqlCmdVariable>
  </ItemGroup>
</Project>